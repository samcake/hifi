uniform sampler2D colorMap;

in vec4 _color;
in vec2 _texCoord0;

out vec4 outFragColor;

void main(void) {
    vec4 color = texture(colorMap, _texCoord0);
    if (color.a < 0.1) {
        discard;
    }
    outFragColor = color * _color;
}
