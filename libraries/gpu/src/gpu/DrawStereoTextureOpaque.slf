<@include gpu/Stereo.slh@>

LAYOUT(binding=0) uniform sampler2DArray stereoColorMap;

layout(location=0) in vec2 varTexCoord0;

layout(location=0) out vec4 outFragColor;

void main(void) {
    outFragColor = vec4(texture(stereoColorMap, vec3(varTexCoord0, float(gpu_StereoSide()))).xyz, 1.0);
}
